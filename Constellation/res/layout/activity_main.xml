<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@drawable/col"
    android:orientation="vertical" >

    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">
            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Month:"
            android:textSize="18sp"
            android:textColor="#FFF"
            />
        	<EditText 
            android:id="@+id/month_edit"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:hint="1-12"
            android:textColor="#FFF"
            android:inputType="number"
            />
    </LinearLayout>
        <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">
            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Day:"
            android:textSize="18sp"
            android:textColor="#FFF"
            />

            <EditText
                android:id="@+id/day_edit"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="1-31"
                android:textColor="#FFF"
                android:inputType="number" >

                <requestFocus />
            </EditText>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal" 
        android:layout_marginTop="210px">

        <ImageView
            android:layout_width="120px"
            android:layout_height="120px"
            android:background="@drawable/aries" />
        <ImageView
            android:layout_width="120px"
            android:layout_height="120px"
            android:background="@drawable/taurus" />
        <ImageView
            android:layout_width="120px"
            android:layout_height="120px"
            android:background="@drawable/gemini" />
        <ImageView
            android:layout_width="120px"
            android:layout_height="120px"
            android:background="@drawable/cancer" />
        <ImageView
            android:layout_width="120px"
            android:layout_height="120px"
            android:background="@drawable/virgo" />
        <ImageView
            android:layout_width="120px"
            android:layout_height="120px"
            android:background="@drawable/aries" />
    </LinearLayout>
    <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="计算"
            android:onClick="calculate"
            android:layout_marginTop="100px"
            android:layout_gravity="center_horizontal" 
            android:background="@drawable/ib_btn"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_marginTop="230px" >

        <ImageView
            android:layout_width="120px"
            android:layout_height="120px"
            android:background="@drawable/libra" />
        <ImageView
            android:layout_width="120px"
            android:layout_height="120px"
            android:background="@drawable/scorpio" />
        <ImageView
            android:layout_width="120px"
            android:layout_height="120px"
            android:background="@drawable/sagittarius" />
        <ImageView
            android:layout_width="120px"
            android:layout_height="120px"
            android:background="@drawable/capricorn" />
        <ImageView
            android:layout_width="120px"
            android:layout_height="120px"
            android:background="@drawable/aquarius" />
        <ImageView
            android:layout_width="120px"
            android:layout_height="120px"
            android:background="@drawable/pisces" />
    </LinearLayout>



</LinearLayout>
